
<%- include("partials/header"); -%>
<h1>Compose</h1>

<form class="item" action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label for="post">Post</label>
        <textarea type="text" class="form-control" name="postBody" rows="5" cols="30" required></textarea>
        
    </div>
    <button id="composebtn" class="btn btn-primary" type="submit" name="public">Publish</button>
</form>

